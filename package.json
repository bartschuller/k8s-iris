{
    "name": "k8s-charm",
    "version": "0.1.0",
    "description": "",
    "main": "dist/backend/index.js",
    "scripts": {
        "start": "electron .",
        "watch": "parcel watch",
        "build": "parcel build",
        "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
        "dev": "npm run build && concurrently 'npm run watch' 'npm run start'"
    },
    "author": "Sebastiaan Besselsen <sebastiaan.besselsen@gmail.com>",
    "license": "UNLICENSED",
    "dependencies": {
        "@aws-sdk/shared-ini-file-loader": "^3.37.0",
        "@chakra-ui/react": "^1.7.3",
        "@emotion/react": "^11.7.1",
        "@emotion/styled": "^11.6.0",
        "@kubernetes/client-node": "^0.16.1",
        "chakra-react-select": "^2.0.1",
        "electron": "^16.0.5",
        "framer-motion": "^5.5.5",
        "react-icons": "^4.3.1",
        "react-unstuck": "^2.4.7"
    },
    "browserslist": [
        "chrome 90"
    ],
    "devDependencies": {
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "concurrently": "^6.5.0",
        "parcel": "^2.0.1",
        "prettier": "^2.5.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "targets": {
        "renderer": {
            "source": "src/renderer/index.html",
            "publicUrl": "./"
        },
        "preload": {
            "source": "src/preload/index.ts",
            "engines": {
                "node": ">= 12"
            }
        },
        "backend": {
            "source": "src/backend/index.ts",
            "engines": {
                "node": ">= 12"
            }
        }
    }
}
